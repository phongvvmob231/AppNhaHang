<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a2"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".manage.table.ThemBanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_buttor"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edMaBan"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColorHint="#EAE6E6">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã Bàn"
                android:textColor="#ffffff" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgQuanLyBan"

                android:layout_width="156dp"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="57dp"
                android:layout_height="48dp"
                android:layout_margin="50dp"
                android:src="@android:drawable/ic_menu_camera" />
        </LinearLayout>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rabDat"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Đặt"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rabTrong"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Trống"

                android:textColor="#ffffff"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rabDangXuLy"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Đang xử lý"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edChiTiet"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="#EAE6E6">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chi tiết"
                android:textColor="#ffffff" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnthem"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Lưu" />

    </LinearLayout>

</LinearLayout>