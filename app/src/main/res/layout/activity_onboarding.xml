<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/k"
    tools:context=".splashscreen.OnboardingActivity">
    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:text="Skip"
        android:fontFamily="@font/berkshire_swash"
        android:textColor="#B1B1B1"
        android:textSize="22sp"
        android:layout_alignParentRight="true" />


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/vp1"
        android:layout_above="@+id/relatilayout1"
        android:layout_below="@+id/tv_skip"
        android:layout_height="match_parent" >


    </androidx.viewpager.widget.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="12dp"
        android:id="@+id/relatilayout1"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <me.relex.circleindicator.CircleIndicator
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/crli"
            android:layout_centerVertical="true"
            app:ci_drawable="@drawable/big_circle_red"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:id="@+id/next1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_anh_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:src="@android:drawable/ic_media_ff" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>